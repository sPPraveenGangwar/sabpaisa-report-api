# ===============================================
# STAGING ENVIRONMENT CONFIGURATION
# For staging server deployment
# ===============================================

# Django Settings
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_STRING_FOR_STAGING
DEBUG=False
ALLOWED_HOSTS=stage.yourdomain.com,your-stage-server-ip

# Primary Database (sabpaisa2)
DB_PRIMARY_NAME=sabpaisa2_stage
DB_PRIMARY_USER=sabpaisa_stage_user
DB_PRIMARY_PASSWORD=CHANGE_THIS_STAGE_PASSWORD
DB_PRIMARY_HOST=db
DB_PRIMARY_PORT=3306

# Legacy Database
DB_LEGACY_NAME=sabpaisa2_legacy_stage
DB_LEGACY_USER=sabpaisa_stage_user
DB_LEGACY_PASSWORD=CHANGE_THIS_STAGE_PASSWORD
DB_LEGACY_HOST=db
DB_LEGACY_PORT=3306

# User Management Database (spclientonboard)
DB_USER_NAME=spclientonboard_stage
DB_USER_USER=sabpaisa_stage_user
DB_USER_PASSWORD=CHANGE_THIS_STAGE_PASSWORD
DB_USER_HOST=db
DB_USER_PORT=3306

# QwikForms Database (spqwikformnew)
QWIKFORMS_DB_NAME=spqwikformnew_stage
QWIKFORMS_DB_USER=sabpaisa_stage_user
QWIKFORMS_DB_PASSWORD=CHANGE_THIS_STAGE_PASSWORD
QWIKFORMS_DB_HOST=db
QWIKFORMS_DB_PORT=3306

# Database Root Password
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/1

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=1440
JWT_REFRESH_TOKEN_LIFETIME=10080

# Pagination
PAGINATION_PAGE_SIZE=50

# Cache TTL
CACHE_TTL=300

# CORS
CORS_ALLOWED_ORIGINS=https://stage.yourdomain.com

# Environment Identifier
ENVIRONMENT=staging
